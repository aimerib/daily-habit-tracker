<div class="mx-auto w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= link_to "Back to Daily Habits", daily_habits_path, class: "rounded-lg py-3 px-5 bg-gray-600 font-medium" %>


    <div class=" w-96 border-2 border-white rounded px-5 mt-10">
      <%= render @daily_habit %>
    </div>

    <div class="flex flex-row justify-between">
      <%= link_to "Edit this entry", edit_daily_habit_path(@daily_habit), class: "mt-2 inline-block text-center rounded-lg py-3 px-5 bg-orange-600 font-medium" %>
      <%# <div class="inline-block ml-2"> %>
      <%= button_to "Destroy this entry", daily_habit_path(@daily_habit), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-600 font-medium" %>
      <%# </div> %>
    </div>
  </div>
</div>
